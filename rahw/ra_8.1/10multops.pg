# Answers

install_problem_grader(~~&std_problem_grader);

ANS($q1->cmp());
ANS($q2->cmp());
ANS($q3->cmp());
ANS($q4->cmp());
ANS(checkbox_cmp($q5->correct_ans()));
ANS($q6->cmp());
ANS($q7->cmp());
ANS($q8->cmp());

